<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/arrowed_back"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <FrameLayout
                android:id = "@+id/frgViewProf3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/months_cost"
                android:textColor="#000"
                android:id="@+id/textView"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:background="@drawable/input_phone">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="@drawable/input_phone"
                android:textColor="#000"
                android:id="@+id/enterYorSumThreeActivity"
                android:inputType="number">
        </EditText>
        <TextView
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:text="@string/grn"
                android:textColor="#000">
        </TextView>
    </LinearLayout>

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="1dp" android:background="#7b7b7b">
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you_use_credits"
                android:textColor="#000"
                android:id="@+id/textView3"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp">
            <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/not_use_credits"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:id="@+id/noCreditsRadioButton"></RadioButton>
                <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:text="@string/have_close_credit"
                        android:textColor="#000"
                        android:id="@+id/closeCreditsRadioButton"></RadioButton>
                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="25dp"
                        android:id="@+id/inRadioButtonLinearLayout">
                    <RadioGroup
                            android:id="@+id/radioSex"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content">
                        <RadioButton
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/first_radio_button"
                                android:textSize="14sp"
                                android:textColor="#000"
                                android:id="@+id/inRadioButtonFirst"></RadioButton>
                        <RadioButton
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:textSize="14sp"
                                android:text="@string/second_radio_button"
                                android:textColor="#000"
                                android:id="@+id/inRadioButtonSecond"></RadioButton>

                    </RadioGroup>

                        </LinearLayout>
                <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/have_open_credit"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:id="@+id/openCreditsRadioButton"></RadioButton>

            </RadioGroup>

        </LinearLayout>

      </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/tLayout">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="1dp" android:background="#7b7b7b">
    </LinearLayout>

        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

    <RadioGroup
            android:id="@+id/radioSex"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="60dp">
        <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/first_radio_button"
                android:textSize="14sp"
                android:textColor="#000"
                android:id="@+id/inRadioButtonFirst"></RadioButton>
        <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:text="@string/second_radio_button"
                android:textColor="#000"
                android:id="@+id/inRadioButtonSecond"></RadioButton>

    </RadioGroup>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/months_cost"
                android:textColor="#000"
                android:id="@+id/textView"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:background="@drawable/input_phone">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textColor="#000"
                android:background="@drawable/input_phone"
                android:id="@+id/enterYorSum"
                android:inputType="number">
        </EditText>
        <TextView
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:textColor="#000"
                android:text="@string/grn">
        </TextView>
    </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextFrameLayout">
        </FrameLayout>

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flForProfileItem"
            android:layout_margin="10dp">
    </FrameLayout>
                  <FrameLayout
                          android:layout_height="match_parent"
                          android:layout_width="match_parent">
    <FrameLayout
            android:id="@+id/frgViewThreeProfile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="bottom">
    </FrameLayout>
                  </FrameLayout>
</LinearLayout>